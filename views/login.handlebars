
<style>
  body {
    font-family: Trocchi;
    background-image: url("/images/field.jpg");
    background-position: cover;
  }

  #loginPage {
    border-style: solid;
    background-color: whitesmoke;
  }
</style>

<div class="row" id="loginPage">
  <div class="col-sm-6 my-3">
    <h2>🏈 Sign Up 🏈</h2>
    <form id="signup-form">
			<div class="mb-3">
				<label for="name" class="form-label">Name</label>
				<input
					type="text"
					id="name-signup"
					class="form-control"
					name="name"
				/>
			</div>
			<div class="mb-3">
				<label for="email" class="form-label">Email</label>
				<input
					type="text"
					id="email-signup"
					class="form-control"
					name="email"
				/>
			</div>
			<div class="mb-3">
				<label for="password" class="form-label">Password</label>
				<input
					type="password"
					id="password-signup"
					class="form-control"
					name="password"
				/>
			</div>
			<div class="mb-3">
				<label for="confirmPassword" class="form-label">Confirm Password</label>
				<input
					type="password"
					id="confirmPassword-signup"
					class="form-control"
					name="confirmPassword"
				/>
			</div>
			<button type="submit" class="btn btn-dark" id="signup">Sign Up</button>
		</form>
	</div>
	<div class="col-sm-6 my-3">
		<h2>Log In</h2>
		<form id="login-form">
			<div class="mb-3">
				<label for="email" class="form-label">Email</label>
				<input
					type="text"
					id="email-login"
					class="form-control"
					name="email"
				/>
			</div>
			<div class="mb-3">
				<label for="password" class="form-label">Password</label>
				<input
					type="password"
					id="password-login"
					class="form-control"
					name="password"
				/>
			</div>
			<button type="submit" class="btn btn-dark" id="login">Log In</button>
		</form>
	</div>
</div>

<script src="/js/login.js"></script>