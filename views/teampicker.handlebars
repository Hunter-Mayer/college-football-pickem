<style>
    body {
        font-family: Trocchi;
        background-image: url("/images/field.jpg");
        background-position: cover;
    }
    .card {
        border-style: solid;
        border-width: thick;
    }
</style>

<h1 class="text-center" id="teamPicker">ğŸˆ Choose The Winning Team & Wager Your Points ğŸˆ</h1>
{{!-- <h4 class="text-center">ğŸˆ ğŸˆ ğŸˆ Choose The Winning Team & Wager Your Points ğŸˆ ğŸˆ ğŸˆ</h4> --}}

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-3">
    {{#each picks as |pick|}}
    <div class="col">
        <div class="card" style="padding: 10px;">
            <div class="card-body">
                
                <form>
                    <div class="custom-control custom-radio">
                        <input type="radio" id="{{game.home_team_id}}" name="customRadio" class="custom-control-input" required>
                        <label class="custom-control-label" for="{{game.home_team_id}}">{{game.home_team.name}} {{game.home_team.mascot}}</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" id="{{game.away_team_id}}" name="customRadio" class="custom-control-input" required>
                        <label class="custom-control-label" for="{{game.away_team_id}}">{{game.away_team.name}} {{game.away_team.mascot}}</label>
                    </div>
                </form>
                <form>
                    <div class="form-row align-items-center">
                        <div class="col-auto my-1">
                            <label class="mr-sm-2 sr-only" for="inlineFormCustomSelect">Select:</label>
                            <select class="custom-select mr-sm-2 text-center" id="inlineFormCustomSelect" style="width: 50px; height: 30px; padding-right: 10px;" required>
                                <option selected>{{points}}</option>
                                <option value="1">1</option>
                                <option value="2">2</option>
                                <option value="3">3</option>
                                <option value="4">4</option>
                                <option value="5">5</option>
                                <option value="6">6</option>
                                <option value="7">7</option>
                                <option value="8">8</option>
                                <option value="9">9</option>
                                <option value="10">10</option>
                            </select>
                        </div>
                        <div class="col-auto my-1">
                            <button type="submit" class="btn btn-dark" style="margin-top: 10px;">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    {{/each}}
</div>

